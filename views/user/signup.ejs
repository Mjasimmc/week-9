<%- include('../layout/header.ejs') %>
    <%- include('../layout/before-login.ejs') %>


        <head>
            <link rel="stylesheet" href="\stylesheets\signIn.css">
        </head>
        <!--================Login Box Area =================-->

        <div class="wrapper fadeInDown">
            <div id="formContent">
                <!-- Tabs Titles -->

                <!-- Icon -->
                <!-- Login Form -->

                <form class="p-t-15" method="post" action="/registerUser">
                    <% if (alertMessage) { %>
                        <div class="alert alert-success m-5" role="alert">
                            <%= alertMessage %>
                        </div>
                        <% } %>

                            <h4>Login Your Account</h4>
                            <input type="text" class="fadeIn second" name="name" placeholder="Username" required>
                            <input type="email" class="fadeIn third" name="email" placeholder="Email" required pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$">
                            <input type="text" name="mobile" value="<%= mobile %>" style="display: none;">
                            <input type="password" class="fadeIn fourth" name="password" placeholder="Password" required>
                            <input type="password" class="fadeIn fifth" name="repassword" placeholder="Re-Password"
                                required>
                            <input type="submit" class="fadeIn fourth" value="Sign Up">
                </form>


            </div>
        </div>
        <style>

            
            input {
                background-color: #f6f6f6;
                border: none;
                color: #0d0d0d;
                padding: 15px 32px;
                text-align: center;
                text-decoration: none;
                display: inline-block;
                font-size: 16px;
                margin: 5px;
                width: 85%;
                border: 2px solid #f6f6f6;
            }

            input:focus {
                background-color: #fff;
                border-bottom: 2px solid #5fbae9;
            }
        </style>
        <%- include('../layout/footer.ejs') %>